<div class="container users">
  <div class="row">
    <h1>List of Users</h1>
  </div>

  <div class="row">
    <div class="col-md-8 col-md-offset-1">
      <table class="table">
        <thead>
          <tr>
            <th class="table_first">First name</th>
            <th class="table_last">Last name</th>
            <th class="table_email">Email</th>
            <th class="table_addr">Address</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="table_first"><%= user.first_name %></td>
              <td class="table_last"><%= user.last_name %></td>
              <td class="table_email"><%= user.email %></td>
              <td class="table_addr"><%= user.address %></td>
              <td><button type="button" class="btn btn-primary btn-sm"><%= link_to 'Show', user %></button></td>
              <td><button type="button" class="btn btn-info btn-sm"><%= link_to 'Edit', edit_user_path(user) %></button></td>
              <td><button type="button" class="btn btn-danger btn-sm"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <%= link_to 'New User', new_user_path %>
  </div>
</div>
