<div class="container items">
  <div class="row">
    <h1>List of Items</h1>
  </div>

  <div class="row">
    <div class="col-md-8 col-md-offset-1">
      <table>
        <thead>
          <tr>
            <th class="table_name">Name</th>
            <th class="table_desc">Description</th>
            <th class="table_price">Price</th>
            <th class="table_cat">Category</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td class="table_name"><%= item.name %></td>
              <td class="table_desc"><%= item.description %></td>
              <td class="table_price"><%= number_to_currency(item.price, :unit => "â‚¬") %></td>
              <td class="table_cat"><%= get_category_name(item.category_id) %></td>
              <td><button type="button" class="btn btn-primary btn-sm btn-font-color"><%= link_to 'Show', item %></button></td>
              <td><button type="button" class="btn btn-info btn-sm"><%= link_to 'Edit', edit_item_path(item) %></button></td>
              <td><button type="button" class="btn btn-danger btn-sm"><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 col-md-offset-2">
      <%= link_to 'New Item', new_item_path %>
    </div>
  </div>
</div>
